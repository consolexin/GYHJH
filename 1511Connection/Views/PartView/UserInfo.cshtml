@model MySqlUnit.stu
@using MySqlUnit;
@{
    List<city> provinces = ViewBag.provinces as List<city>;
    List<city> cities = ViewBag.cities as List<city>;
    List<city> conuntries = ViewBag.conuntries as List<city>;
    var headurl = Model.headUrl == "" ? "http://www.mzhdemo.xyz:2004/Upload/1.png" : Model.headUrl;
}
<div class="row mt-4">
    <div class="col-md-12">

        <div style="height:40px"></div>


        <div class="card">

            <div class="card-body">

                <div class="row">
                    <img id="headimg" src="@headurl" style="height:70px;width:70px;margin:0 auto;border-radius:35px" onclick="selectImage()" />
                    <input type="file" style="display:none" id="headimgfile" onchange="uploadimg(this)" />
                </div>
                <div style="height:10px"></div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-user"></i></span>
                            </div>
                            <input id="stu_name" type="text" class="form-control" style="font-size:16px" placeholder="姓名" value="@Model.name">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-phone"></i></span>
                            </div>
                            <input id="stu_phone" type="text" class="form-control" style="font-size:16px" placeholder="手机号" value="@Model.phone">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-qq"></i></span>
                            </div>
                            <input id="stu_qq" type="text" class="form-control" style="font-size:16px" placeholder="qq" value="@Model.qq">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-weixin"></i></span>
                            </div>
                            <input id="stu_wx" type="text" class="form-control" style="font-size:16px" placeholder="微信号" value="@Model.weixin">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-address-book"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="学号" style="font-size:16px" value="@Model.number" disabled="disabled">
                        </div>
                    </div>

                    <div class="col-md-4">
                        <select id="provinceSelect" class="form-control" style="width:33.3%;float:left;height:33px;font-size:16px" onchange="PSchange()">
                            <option value="-1">请选择</option>
                            @for (int i = 0; i < provinces.Count(); i++)
                            {
                                if (provinces[i].code == ViewBag.pvcode)
                                {
                                    <option value="@provinces[i].code" selected="selected">@provinces[i].name</option>
                                }
                                else
                                {
                                    <option value="@provinces[i].code">@provinces[i].name</option>
                                }

                            }
                        </select>
                        <select id="citySelect" class="form-control" style="width:33.3%;float:left;height:33px;font-size:16px" onchange="CTchange()">
                            <option value="-1">请选择</option>
                            @for (int i = 0; i < cities.Count(); i++)
                            {
                                if (cities[i].code == ViewBag.ctcode)
                                {
                                    <option  value="@cities[i].code" selected="selected">@cities[i].name</option>
                                }
                                else
                                {
                                    <option value="@cities[i].code">@cities[i].name</option>
                                }

                            }
                        </select>
                        <select id="countrySelect" class="form-control" style="width:33.3%;float:left;height:33px;font-size:16px">
                            <option value="-1">请选择</option>
                            @for (int i = 0; i < conuntries.Count(); i++)
                            {
                                if (conuntries[i].code == ViewBag.cycode)
                                {
                                    <option value="@conuntries[i].code" selected="selected">@conuntries[i].name</option>
                                }
                                else
                                {
                                    <option value="@conuntries[i].code">@conuntries[i].name</option>
                                }

                            }
                        </select>
                    </div>
                    
                </div>
                <div class="row">
                    <div class="col-md-4" style="margin-top:10px">
                        <button class="btn btn-primary" style="width:100%;" onclick="saveUserInfo()">保存</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-key"></i></span>
                            </div>
                            <input id="stu_psw1" type="password" class="form-control" style="font-size:16px" placeholder="新密码" value="" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fa fa-key"></i></span>
                            </div>
                            <input id="stu_psw2" type="password" class="form-control"  style="font-size:16px" placeholder="确认密码" value="" />
                        </div>
                    </div>
                    
                </div>
                <div class="row">
                    <div class="col-md-4" style="margin-top:10px">
                        <button class="btn btn-primary" style="width:100%" onclick="updatePsw()">更新密码</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>

</script>

